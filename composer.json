{
    "name": "phpmx/core",
    "description": "Framework PHP leve e eficiente para desenvolvimento rápido de APIs modernas com foco em manutenção simples.",
    "license": "MIT",
    "version": "3.0",
    "keywords": [
        "framework",
        "php",
        "api",
        "rest",
        "lightweight",
        "phpmx",
        "router",
        "orm"
    ],
    "homepage": "https://github.com/phpmx/core",
    "authors": [
        {
            "name": "André Ricardo",
            "email": "contatoadmx@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-mbstring": "*",
        "ext-fileinfo": "*"
    },
    "suggest": {
        "ext-gd": "Required for image manipulation and Captcha generation.",
        "ext-exif": "Required for identifying file types and correcting JPEG orientation.",
        "ext-pdo_mysql": "Required if you intend to use MySQL or MariaDB connections.",
        "ext-pdo_sqlite": "Required if you intend to use SQLite connections.",
        "ext-pdo_pgsql": "Required if you intend to use PostgreSQL connections."
    },
    "autoload": {
        "psr-4": {
            "": "class/"
        },
        "files": [
            "system/helper/constant/char_normalizer.php",
            "system/helper/constant/http_status.php",
            "system/helper/constant/request_is.php",
            "system/helper/function/cache.php",
            "system/helper/function/changes.php",
            "system/helper/function/color.php",
            "system/helper/function/dbug.php",
            "system/helper/function/env.php",
            "system/helper/function/idkey.php",
            "system/helper/function/is.php",
            "system/helper/function/mx5.php",
            "system/helper/function/num.php",
            "system/helper/function/path.php",
            "system/helper/function/prepare.php",
            "system/helper/function/remove_accents.php",
            "system/helper/function/str.php",
            "system/helper/function/str_to.php",
            "system/helper/function/uuid.php",
            "system/helper/script/env.php",
            "system/helper/script/error.php",
            "system/helper/script/log.php",
            "system/helper/script/path.php",
            "system/helper/script/timezone.php"
        ]
    },
    "bin": [
        "mx"
    ]
}